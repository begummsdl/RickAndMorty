<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <FrameLayout
        android:id="@+id/mainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/btnTurnBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/left_icon"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Character Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_medium"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/characterImage"
                android:layout_width="275dp"
                android:layout_height="275dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/titleStatus"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Status:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBaseline_toBaselineOf="@id/txtStatus"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/characterImage"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/characterImage"
                app:layout_constraintLeft_toRightOf="@id/titleStatus"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/titleSpecy"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Specy:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleStatus"
                app:layout_constraintBaseline_toBaselineOf="@id/txtSpecy"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/txtSpecy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStatus"
                app:layout_constraintLeft_toRightOf="@id/titleSpecy"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/titleGender"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Gender:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleSpecy"
                app:layout_constraintBaseline_toBaselineOf="@id/txtGender"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/txtGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSpecy"
                app:layout_constraintLeft_toRightOf="@id/titleGender"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/titleOrigin"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Origin:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleGender"
                app:layout_constraintBaseline_toBaselineOf="@id/txtOrigin"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/txtOrigin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtGender"
                app:layout_constraintLeft_toRightOf="@id/titleOrigin"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/titleLocation"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Location:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleOrigin"
                app:layout_constraintBaseline_toBaselineOf="@id/txtLocation"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtOrigin"
                app:layout_constraintLeft_toRightOf="@id/titleLocation"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/titleEpisodes"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Episodes:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleLocation"
                app:layout_constraintBaseline_toBaselineOf="@id/txtEpisodes"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/txtEpisodes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtLocation"
                app:layout_constraintLeft_toRightOf="@id/titleEpisodes"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/titleCreated"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="Created at (in API):"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleEpisodes"
                app:layout_constraintBaseline_toBaselineOf="@id/txtCreated"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/avenir_medium"/>

            <TextView
                android:id="@+id/txtCreated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="text"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtEpisodes"
                app:layout_constraintLeft_toRightOf="@id/titleCreated"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/avenir_medium"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</LinearLayout>